{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": ".built",
    "rootDir": ".",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules", "bundle", "dist", "loaders"
    ],
    "types": ["node", "core-js"],
    "angularCompilerOptions": {
      "genDir": ".",
      "debug": false
    }
}
